

.search{
  display: flex;
  background-clip: #fff;
  flex-direction: row;
  align-items: center;
  position: absolute;
  margin-top: 10px;
  margin-left: 60px;
}

.article{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.article .left{

  width: 35%;
  height: 100%;
  margin: 0 auto;
}
.article .right{
  width: 65%;
  height: 100%;
}

.article .right .title{
   display: -webkit-box;
   overflow: hidden;
   text-overflow: ellipsis;
   word-break: break-all;
   -webkit-box-orient: vertical;
   line-clamp: 3;
   margin-right: 10rpx;
}
.image2{
  width: 200rpx;
  height: 150rpx;
}
.container{
  height: 80%;
  padding: 80rpx 0;
}