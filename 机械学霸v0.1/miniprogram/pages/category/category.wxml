                    <image class="weui-grid__icon" src="../../images/jxsj.png" wx:if="{{index==1}}"/>
                    <image class="weui-grid__icon" src="../../images/jxzz.png" wx:if="{{index==2}}"/>
                    <image class="weui-grid__icon" src="../../images/cad.png" wx:if="{{index==3}}"/>
                    <image class="weui-grid__icon" src="../../images/gjjs.png" wx:if="{{index==4}}"/>
                    <image class="weui-grid__icon" src="../../images/more.png" wx:if="{{index==5}}"/>
                    <image class="weui-grid__icon" src="../../images/more.png" wx:if="{{index==6}}"/>
                    <image class="weui-grid__icon" src="../../images/more.png" wx:if="{{index==7}}"/>
                    
                    <view class="weui-grid__label" wx:if="{{index==0}}">机械原理</view>
                    <view class="weui-grid__label" wx:elif="{{index==1}}">机械设计</view>
                    <view class="weui-grid__label" wx:elif="{{index==2}}">机械制造</view>
                    <view class="weui-grid__label" wx:elif="{{index==3}}">CAD/CAM</view>
